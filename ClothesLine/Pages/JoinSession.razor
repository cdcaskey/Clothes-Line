@page "/joinsession"

@inject NavigationManager navManager;

<h1>Join Session</h1>

<p>Enter a join code below to join your session.</p>

<EditForm EditContext="@context" OnSubmit="@HandleJoin">
    <p>Name <InputText @bind-Value="name" /></p>
    <p>Session code <InputText @bind-Value="joinCode" /></p>
    <button type="submit">Join</button>
</EditForm>

@code {
    private EditContext? context;
    private string joinCode = string.Empty;
    private string name = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        context = new EditContext((joinCode, name));
        await base.OnInitializedAsync();
    }

    private void HandleJoin()
    {
        navManager.NavigateTo($"session/{joinCode}/{name}");
    }
}
