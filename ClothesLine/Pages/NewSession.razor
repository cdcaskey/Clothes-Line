@page "/newsession"
@inject NavigationManager navManager

<h1>Planning Session</h1>

<p>This will be a planning session</p>

<EditForm class="col-md-6" Model="this" OnSubmit="@CreateSession">
    <p>Name <InputText class="form-control" @bind-Value="name" /></p>
    <button class="btn btn-primary" type="submit">Create Session</button>
</EditForm>

@code {
    private string name = string.Empty;

    private void CreateSession()
    {
        navManager.NavigateTo($"session/{Guid.NewGuid().ToString().Substring(0, 6)}/{name}");
    }
}
